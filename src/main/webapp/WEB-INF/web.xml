<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="4.0"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <display-name>Archetype Created Web Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- SERVLETS -->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.gmail.pashasimonpure.controller.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>com.gmail.pashasimonpure.controller.servlet.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleListServlet</servlet-name>
        <servlet-class>com.gmail.pashasimonpure.controller.servlet.RoleListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleListServlet</servlet-name>
        <url-pattern>/roles</url-pattern>
    </servlet-mapping>

    <!-- LISTENERS -->

    <listener>
        <listener-class>com.gmail.pashasimonpure.controller.listener.AppListener</listener-class>
    </listener>

    <!-- FILTERS -->

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.gmail.pashasimonpure.controller.filter.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/roles</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.gmail.pashasimonpure.controller.filter.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/users</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.gmail.pashasimonpure.controller.filter.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

</web-app>